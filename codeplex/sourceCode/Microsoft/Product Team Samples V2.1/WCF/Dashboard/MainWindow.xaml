<Window x:Class="WpfWcfDashboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CPU Chart" Height="350" Width="525">
    <Grid>
        <Label Content="CPU" Height="26" Margin="100,0,0,0" Name="Kpi1" HorizontalAlignment="Left" Width="36" FontSize="14" VerticalAlignment="Top" />
        <Canvas Height="311" Margin="0,0,0,0" Name="PlainChart" VerticalAlignment="Top" Loaded="PlainChart_Loaded">
            <Border BorderBrush="Silver" BorderThickness="1" Canvas.Left="1" Canvas.Bottom="0" Height="65000" Name="border1" Width="65000" />
        </Canvas>
        <Label Content="100 %" Height="28" HorizontalAlignment="Left" Name="label1" VerticalAlignment="Top" />
        <Label Content="0 %" Height="26" HorizontalAlignment="Left" Margin="0,285,0,0" Name="label2" VerticalAlignment="Top" />
    </Grid>
</Window>
